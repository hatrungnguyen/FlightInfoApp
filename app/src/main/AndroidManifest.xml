<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--    premission to use internet-->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/jetset"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/jetset_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JetSet"
        tools:targetApi="31">

        <activity
            android:name=".activities.MainActivity"
            android:exported="true"> <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter> </activity>
        <activity android:name=".activities.ChooseRoleActivity" />
        <activity android:name=".activities.SignUpPassengerActivity" />
        <activity android:name=".activities.RetrievalFailedActivity" />
        <activity android:name=".activities.PassengerHomeActivity" />
    </application>

</manifest>