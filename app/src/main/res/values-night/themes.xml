<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.JetSet" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorAccent">@color/pink</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Theme.JetSet" parent="Base.Theme.JetSet" />

    <style name="TextAppearance.Poppins.Bold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>
    <style name="TextAppearance.Poppins.Medium" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>
    <style name="TextAppearance.Poppins.SemiBold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>
    <style name="TextAppearance.Poppins.ExtraBold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_extrabold</item>
    </style>
    <style name="TextAppearance.Poppins.Black" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_black</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/darkPurple</item>
    </style>

    <style name="PlaceholderTextStyle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">#9b9b9b</item>
    </style>

    <style name="Theme.NavigationDrawer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lavender</item>
        <item name="colorPrimaryVariant">@color/lavender</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>